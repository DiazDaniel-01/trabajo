@model trabajo.Models.Producto

@{
    ViewData["Title"] = "Edit";
}

<h1>Editar</h1>

<h5>Edite los Productos</h5>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="IdProducto" />
            <div class="form-group">
                <label asp-for="Nombre" class="control-label"></label>
                <input asp-for="Nombre" class="form-control" />
                <span asp-validation-for="Nombre" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Descripcion" class="control-label"></label>
                <input asp-for="Descripcion" class="form-control" />
                <span asp-validation-for="Descripcion" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Precio" class="control-label"></label>
                <input asp-for="Precio" class="form-control" />
                <span asp-validation-for="Precio" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="RutaImagen" class="control-label">Ruta de la Imagen</label>
                <input asp-for="RutaImagen" class="form-control" readonly />
                <span asp-validation-for="RutaImagen" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NombreImagen" class="control-label">Nombre de la Imagen</label>
                <input asp-for="NombreImagen" class="form-control" readonly />
                <span asp-validation-for="NombreImagen" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label for="archivoImagen" class="control-label">Subir nueva imagen</label>
                <input type="file" id="archivoImagen" name="archivoImagen" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="IdCategoria" class="control-label">Categorias</label>
                <select asp-for="IdCategoria" class="form-control" asp-items="ViewBag.IdCategoria"></select>
                <span asp-validation-for="IdCategoria" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FechaCarga" class="control-label"></label>
                <input asp-for="FechaCarga" class="form-control" />
                <span asp-validation-for="FechaCarga" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Confirmar" class="btn btn-primary" /> |
                <a asp-action="Index" class="btn btn-outline-danger">Volver a la Lista</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
