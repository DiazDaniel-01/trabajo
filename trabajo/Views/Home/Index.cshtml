@model IEnumerable<trabajo.Models.Producto>

@{
    ViewData["Title"] = "Home Page";
}

<div class="header">
    <h1>La Bondioleta</h1>
</div>
<div class="container my-2">
    <div class="row">
        <!-- Lista de productos -->
        <div class="col-md-8" id="productos-list">
            @foreach (var producto in Model)
            {
                <div class="card mb-4 product-card">
                    <div class="card-body d-flex">
                        <img src="@Url.Content("~/images/" + producto.NombreImagen)" class="product-img" alt="@producto.Nombre">
                        <div>
                            <h5 class="card-title">@producto.Nombre</h5>
                            <p class="card-text">@producto.Descripcion</p>
                            <p class="card-text">$@producto.Precio</p>
                            <button class="btn btn-primary add-to-cart" data-name="@producto.Nombre" data-price="@producto.Precio">Agregar al carrito</button>
                        </div>
                    </div>
                </div>
            }
        </div>
        <!-- Cart -->
        <div class="col-md-4">
            <h3>Tu Carrito</h3>
            <ul id="cart-items" class="list-group mb-3">
                <!-- Cart items will be dynamically added here -->
            </ul>
            <h4>Total: $<span id="cart-total">0.00</span></h4>
            <button id="checkout" class="btn checkout-btn text-white">Checkout</button>
        </div>
    </div>
</div>